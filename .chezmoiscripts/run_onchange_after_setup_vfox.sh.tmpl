#!/bin/bash

echo "ğŸ› ï¸  Configuring vfox plugins..."
plugins=({{ range .apps.vfox.plugins }}{{ . | quote }} {{ end }})

for plugin in "${plugins[@]}"; do
    vfox add "$plugin"
done

echo "ğŸ› ï¸  Installing tools..."
tools=({{ range .apps.vfox.tools }}{{ . | quote }} {{ end }})

for tool in "${tools[@]}"; do
    vfox install "$tool"
done

echo "ğŸ› ï¸  Setting default tools..."
defaults=({{ range .apps.vfox.defaults }}{{ . | quote }} {{ end }})

for default in "${defaults[@]}"; do
    vfox use -g "$default"
done

echo "âœ…  Done. vfox and all the necessary SDKs are configured"
